        <section>

            <div class="container">

                {{ partial('subnavbar') }}

                <div class="page-header">
                    <h1>{{ template.page_title }}</h1>
                </div>

                <div class="row">

                    <div class="col-md-12">

                        {{ form_open('', 'method="post"') }}

                            <div>

                                {{ form_ckeditor('content', content, editor_mode, { 'height': 150 }) }}

                            </div>

                            <br class="clear" />

                            <button type="submit" class="btn btn-primary">Submit Content</button>

                        {{ form_close() }}

                        <h2>Result:</h2>

                        <div>{{ set_value('content', content, false) }}</div>

                    </div>

                </div>

            </div>

        </section>
